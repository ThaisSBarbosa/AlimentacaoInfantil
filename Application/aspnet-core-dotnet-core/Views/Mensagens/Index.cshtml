@model MensagemViewModel
@{
    ViewData["Title"] = "Mensagens";
}
@{
    Layout = "_LayoutYummy";
}
<!-- ======= MENSAGENS ======= -->
<br />
<section id="mensagens" class="book-a-table">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Mensagem</h2>
            <p>Envie <span>uma mensagem</span></p>
        </div>

        <div class="row g-0">

            <div class="col-lg-4 reservation-img" style="background-image: url(/Yummy/assets/img/smoothie.jpg); background-size: cover; " data-aos="zoom-out" data-aos-delay="200"></div>

            <div class="col-lg-8 align-items-center reservation-form-bg">
                    <div class="row gy-4">
                        <div class="col-lg-6 col-md-6">
                        <input type="text" class="form-control" id="nomeRemetente" placeholder="Informe o seu nome de usuário." data-msg="Informe o seu nome de usuário.">
                            <div class="validate"></div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                        <input type="text" class="form-control" id="nomeDestinatario" placeholder="Informe o nome de usuário do nutricionista." data-rule="email" data-msg="Informe o nome de usuário do nutricionista.">
                            <div class="validate"></div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="col-lg-12 col-md-6 pb-3">
                            <input type="text" class="form-control" asp-for="Assunto" placeholder="Assunto" data-rule="minlen:4" data-msg="Informe o assunto.">
                            <div class="validate"></div>
                        </div>
                        <textarea class="form-control" asp-for="Conteudo" rows="10" placeholder="Digite uma mensagem"></textarea>
                        <div class="validate"></div>
                    </div>
                    <div class="text-center"><button onclick="enviarMensagem()">Enviar</button></div>
            </div>

        </div>

    </div>
</section>

<script src="~/js/mensagens.js" asp-append-version="false"></script>
<script type="text/javascript" src="~/js/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>