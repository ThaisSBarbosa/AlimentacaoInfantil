@{
    ViewData["Title"] = "Testes de APIs";
}


<div class="principal">

    <div class="primeira-linha row">
        <div class="col-md-12">
            <h2>Testes de APIs do Projeto para Alimentação Infantil!</h2>
            <p>
                Nosso website ainda não possui interface, mas você pode testar algumas das principais
                APIs utilizadas aqui.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <select id="cbAPI" class="form-select form-select-lg">
                <option value="0" selected>Escolha uma API...</option>
                <option value="1">Exibir Posts</option>
                <option value="2">Fazer um Post</option>
                <option value="3">Editar um Post</option>
                <option value="4">Apagar um Post</option>
                <option value="5">Exibir Anúncios</option>
                <option value="6">Fazer um Anúncio</option>
                <option value="7">Editar um Anúncio</option>
                <option value="8">Apagar um Anúncio</option>
                <option value="9">Enviar um Amei</option>
                <option value="10">Retirar Amei</option>
                <option value="11">Enviar Mensagem</option>
                <option value="12">Responder Mensagem</option>
                <option value="13">Conectar-se a um pai/mãe</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-info" id="btnExecutar">Executar</button>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-3"></div>
        <div class="col-md-9 txtsAPIs">
            <p>Request</p>
            <textarea class="form-control" id="txtRequest" rows="8"></textarea>
        </div>
        <div class="col-md-9 txtsAPIs">
            <p>Response</p>
            <textarea class="form-control" id="txtResponse" rows="8"></textarea>
        </div>
    </div>
</div>