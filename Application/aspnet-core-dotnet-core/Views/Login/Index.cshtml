@model UsuarioViewModel
@{
    ViewData["Title"] = "Login";
}
﻿@{
    Layout = "_LayoutLogin";
}


<h3 class="text-center mb-4">Login</h3>
<form asp-action="Login" method="post" role="form" class="login-form">
    <div class="form-group">
        <input type="text" asp-for="Email" class="form-control rounded-left" placeholder="Email" required>
        <div class="validate"></div>
    </div>
    <div class="form-group d-flex">
        <input type="password" asp-for="Senha" class="form-control rounded-left" placeholder="Senha" required>
        <div class="validate"></div>
    </div>
    <div class="form-group">
        <button type="submit" class="form-control btn btn-book-a-table rounded submit px-3 ml-0" style="font-size:18px;">Login</button>
    </div>
    <div class="form-group d-md-flex">
        <div class="w-50 text-md-left">
            <a href="cadastro">Cadastre-se</a>
        </div>
        <div class="w-50 text-md-right">
            <a href="#">Esqueci minha senha</a>
        </div>
    </div>
</form>
