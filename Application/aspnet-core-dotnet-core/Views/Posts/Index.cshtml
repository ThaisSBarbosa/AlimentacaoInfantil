@model List<PostViewModel>

@{
    ViewData["Title"] = "Posts";
    Model.ToArray();
}

@{
    Layout = "_LayoutYummy";
}
<!-- ======= Posts ======= -->
<br />
<section id="posts" class="chefs section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Feed</h2>
            <p><span>Últimas Postagens</span></p>
        </div>

        <div class="row gy-4">

            <div class="col-lg-12 align-items-center reservation-form-bg">
                <div class="form-group mt-6">
                    <input type="text" class="form-control conteudoPost" id="conteudo" rows="10" placeholder="Faça um post"></input>
                    <div class="validate"></div>
                </div>
                <div class="text-center">
                    <button id="btnPostar" onclick="fazerNovoPost()" class="btn-book-a-table">Postar</button>
                </div>
            </div>

            @foreach (var post in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="chef-member">
                        <div class="member-img">
                            <img src="~/Yummy/assets/img/mesa_cafe.jpg" class="img-fluid" alt="">
                            <div class="social">
                                <a href=""><i class="bi bi-heart"></i></a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@post.UsuarioAutor.Nome</h4>
                            <span>@post.TipoUsuario</span>
                            <p>@post.Conteudo</p>
                        </div>
                        <div class="col-sm-2 member-info">
                            <div>@post.Amei</div>
                            <img id="amei" onclick="amei(@post.Codigo)" src="~/img/heart.png" class="img-fluid" alt="">
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</section>
<script src="~/js/posts.js" asp-append-version="false"></script>
<script type="text/javascript" src="~/js/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
